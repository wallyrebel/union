# =============================================================================
# RSS to WordPress Automation - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration (REQUIRED)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model to use for rewriting (default: gpt-4.1-nano)
# Options: gpt-4.1-nano, gpt-4o-mini, gpt-4o, etc.
OPENAI_MODEL=gpt-4.1-nano

# -----------------------------------------------------------------------------
# WordPress Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Your WordPress site URL (no trailing slash)
WORDPRESS_BASE_URL=https://example.com

# WordPress username with publishing permissions
WORDPRESS_USERNAME=your-username

# WordPress Application Password (generate in Users > Profile > Application Passwords)
WORDPRESS_APP_PASSWORD=xxxx xxxx xxxx xxxx xxxx xxxx

# Default post status: "publish" or "draft"
WORDPRESS_POST_STATUS=publish

# -----------------------------------------------------------------------------
# Image Fallback Providers (OPTIONAL)
# -----------------------------------------------------------------------------
# At least one is recommended for articles without RSS images

# Pexels API Key (get from https://www.pexels.com/api/)
# Free tier: 200 requests/hour
PEXELS_API_KEY=

# Unsplash Access Key (get from https://unsplash.com/developers)
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=

# -----------------------------------------------------------------------------
# Logging & Timezone (OPTIONAL)
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Timezone for date calculations (default: UTC)
# Examples: America/Chicago, America/New_York, Europe/London
TIMEZONE=UTC

# Optional: Log file path (leave empty for stdout only)
LOG_FILE=
